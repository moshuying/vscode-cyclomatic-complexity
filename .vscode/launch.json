{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动扩展",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: compile"
        },
        {
            "name": "运行CLI工具",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/out/cli/index.js",
            "args": [],
            "console": "integratedTerminal",
            "preLaunchTask": "npm: compile"
        }
    ]
}
